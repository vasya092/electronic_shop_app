<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ElectronicShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/mark_pro</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="WhiteButton">
        <item name="android:minHeight">@dimen/min_height_button</item>
        <item name="android:paddingTop">@dimen/padding_vertical_button</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_button</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal_button</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="TextAppearance.ElectronicShop.TabItems" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/mark_pro</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>