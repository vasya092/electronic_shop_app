<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/main_padding_top"
        android:paddingStart="@dimen/main_padding_start_and_end"
        android:paddingEnd="@dimen/main_padding_start_and_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/section_title_font_size"
            android:textFontWeight="700"
            android:text="@string/fragHome_tv_selectCategory"
            android:layout_marginStart="@dimen/section_title_margin_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragHome_tv_viewAll"
            android:textSize="@dimen/section_title_see_more_font_size"
            android:layout_marginEnd="@dimen/section_title_margin_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_title"
            app:layout_constraintBottom_toBottomOf="@id/home_title"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_menu_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top_category_menu_slider"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/section_header"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_search_container"
        android:layout_marginEnd="@dimen/margin_end_search_container"
        android:layout_marginTop="@dimen/margin_top_search_container"
        android:layout_marginBottom="@dimen/margin_bottom_search_container"
        app:layout_constraintTop_toBottomOf="@id/category_menu_slider"
        app:layout_constraintStart_toStartOf="@id/section_header">
        <com.example.electronicshop.presentation.custom.SearchView
            android:id="@+id/home_search_field"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_weight="0.9"
            android:layout_marginEnd="@dimen/margin_end_search_field"
            app:layout_constraintEnd_toStartOf="@id/fragment_home_qr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_home_qr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_qr"
            android:background="@drawable/circle_backround_orange"
            app:layout_constraintHorizontal_weight="0.1"
            app:layout_constraintStart_toEndOf="@id/home_search_field"
            app:layout_constraintEnd_toEndOf="@id/search_block"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_hot_sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_top_section_hot_sales"
        android:paddingStart="@dimen/main_padding_start_and_end"
        android:paddingEnd="@dimen/main_padding_start_and_end"
        app:layout_constraintTop_toBottomOf="@id/search_block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/hot_sales_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/section_title_font_size"
            android:textFontWeight="700"
            android:text="@string/text_hot_sales_section_title"
            android:layout_marginStart="@dimen/section_title_margin_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragHome_tv_viewAll"
            android:textSize="@dimen/section_title_see_more_font_size"
            android:layout_marginEnd="@dimen/section_title_margin_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/hot_sales_section_title"
            app:layout_constraintBottom_toBottomOf="@id/hot_sales_section_title"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hot_sales_products_slider"
            android:layout_width="match_parent"
            android:overScrollMode="always"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_hot_sales_slider"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/hot_sales_section_title"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_best_sellers_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_top_best_sellers"
        android:paddingStart="@dimen/main_padding_start_and_end"
        android:paddingEnd="@dimen/main_padding_start_and_end"
        app:layout_constraintTop_toBottomOf="@id/section_hot_sales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/section_best_sellers_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/section_title_font_size"
            android:textFontWeight="700"
            android:text="@string/text_hot_sales_section_title"
            android:layout_marginStart="@dimen/section_title_margin_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragHome_tv_viewAll"
            android:textSize="@dimen/section_title_see_more_font_size"
            android:layout_marginEnd="@dimen/section_title_margin_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/section_best_sellers_title"
            app:layout_constraintBottom_toBottomOf="@id/section_best_sellers_title"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/best_sales_slider"
            android:layout_width="match_parent"
            android:overScrollMode="always"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_hot_sales_slider"
            app:layout_constraintTop_toBottomOf="@id/section_best_sellers_title"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>